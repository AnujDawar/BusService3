<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardFront"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="8dp"
        card_view:cardBackgroundColor="@color/cardFront"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewHeadingStyle"
                    android:text="Company Name : " />

                <TextView
                    style="@style/textViewValue"
                    android:textColor="#F44336"
                    android:id="@+id/company_name_value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewHeadingStyle"
                    android:text="Bus Type : " />

                <TextView
                    style="@style/textViewValue"
                    android:textColor="#00897B"
                    android:id="@+id/busType" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewHeadingStyle"
                    android:text="From : " />

                <TextView
                    style="@style/textViewValue"
                    android:textColor="#FB8C00"
                    android:id="@+id/busFrom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewHeadingStyle"
                    android:text="To : " />

                <TextView
                    style="@style/textViewValue"
                    android:textColor="#0277BD"
                    android:id="@+id/busTo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewHeadingStyle"
                    android:text="Fare : " />

                <TextView
                    style="@style/textViewValue"
                    android:textColor="#C2185B"
                    android:id="@+id/busFare" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>